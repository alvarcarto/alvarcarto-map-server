http://0.0.0.0, https://0.0.0.0 {

  tls /etc/caddy/cert.pem /etc/caddy/key.pem

  gzip
  log /var/log/access.log

  proxy  /render 127.0.0.1:8001 {
    transparent
    without /render
  }
  header /render Access-Control-Allow-Origin *

  proxy  /tiles 127.0.0.1:8002 {
    transparent
    without /tiles
  }
  header /tiles Access-Control-Allow-Origin *

  proxy  /placement 127.0.0.1:8003 {
    transparent
    without /placement
  }
  header /placement Access-Control-Allow-Origin *
}
